---
import { getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import CanvasFeaturedImageLoader from "../../components/singleCanvas/CanvasFeaturedImageLoader.astro";
import CanvasImageLoader from "../../components/singleCanvas/CanvasImageLoader.astro";
export const prerender = false;

const { path } = Astro.params;
if (!path) {
    return Astro.redirect("/404");
}

const canvas = await getEntry("canvases", path);

if (!canvas || canvas.data.for_sale === true) {
    return Astro.redirect("/404");
}
---

<head>
    <meta name="description" content="test" />
    <title>{canvas.data.name + " | Alexsandra Beijato"}</title>
</head>

<Layout>
    <div class="w-full flex flex-row justify-center items-center">
        <div class="w-screen-content-limit flex flex-col justify-center items-center pt-11 pb-11 xl:pt-28 xl:pb-28">
            
            <div class="w-full flex flex-col xl:flex-row gap-x-6 mb-11 xl:mb-20 px-4 gap-y-4">
                <div class="w-full xl:w-2/3 flex flex-col justify-center items-end">
                    <CanvasFeaturedImageLoader featuredImageUrl={canvas.data.featured_image}/>
                </div>
                <div class="w-full xl:w-1/3 flex flex-col">
                    <h1 class="text-4xl pb-6">{canvas.data.name}</h1>
                    <p class="">Categoria: {canvas.data.category}</p>
                    <p class="">Dimensões: {canvas.data.dimensions}</p>
                    <p class="">Estilo: {canvas.data.painting_style}</p>
                    <p class="">Técnica: {canvas.data.painting_technique}</p>
                </div>
            </div>

            <div class="w-full flex flex-col mb-11 xl:mb-20 px-4">
                <p>{canvas.data.description}</p>
            </div>

            <div class="w-full grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-flow-row gap-4 px-4">
                {
                    canvas.data.image_list.map((imageUrl) => (
                        <div class="">
                            <CanvasImageLoader ImageUrl={imageUrl}/>
                        </div>
                    ))
                }
            </div>

        </div>
    </div>
</Layout>
