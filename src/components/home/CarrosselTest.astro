<div class="relative w-full overflow-hidden">
    <button
        id="prevButton"
        class="absolute top-1/2 left-4 transform -translate-y-1/2 opacity-50 bg-light-brown text-white p-2 rounded-full shadow-md hover:opacity-100 transition duration-150 z-[500]"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
                fill="currentColor"
                d="M6.325 12.85q-.225-.15-.337-.375T5.874 12t.113-.475t.337-.375l8.15-5.175q.125-.075.263-.112T15 5.825q.4 0 .7.288t.3.712v10.35q0 .425-.3.713t-.7.287q-.125 0-.262-.038t-.263-.112z"
            ></path></svg
        >
    </button>

    <div
        id="carousel"
        class="flex transition-transform duration-300 ease-in-out px-10"
    >
        <div class="flex-shrink-0 w-full sm:w-1/2 lg:w-1/3 p-4">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Item 1</h2>
                <p class="text-gray-600">Descrição do item 1</p>
            </div>
        </div>
        <div class="flex-shrink-0 w-full sm:w-1/2 lg:w-1/3 p-4">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Item 2</h2>
                <p class="text-gray-600">Descrição do item 2</p>
            </div>
        </div>
        <div class="flex-shrink-0 w-full sm:w-1/2 lg:w-1/3 p-4">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Item 3</h2>
                <p class="text-gray-600">Descrição do item 3</p>
            </div>
        </div>
        <div class="flex-shrink-0 w-full sm:w-1/2 lg:w-1/3 p-4">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Item 4</h2>
                <p class="text-gray-600">Descrição do item 4</p>
            </div>
        </div>
    </div>

    <button
        id="nextButton"
        class="absolute top-1/2 right-4 transform -translate-y-1/2 opacity-50 bg-light-brown text-white p-2 rounded-full shadow-md hover:opacity-100 transition duration-150 z-[500]"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
                fill="currentColor"
                d="M8 17.175V6.825q0-.425.3-.713t.7-.287q.125 0 .263.037t.262.113l8.15 5.175q.225.15.338.375t.112.475t-.112.475t-.338.375l-8.15 5.175q-.125.075-.262.113T9 18.175q-.4 0-.7-.288t-.3-.712"
            ></path></svg
        >
    </button>
</div>

<script>
    const carousel = document.getElementById("carousel")!;
    const prevButton = document.getElementById("prevButton")!;
    const nextButton = document.getElementById("nextButton")!;

    let currentIndex = 0;

    const updateCarousel = () => {
        const itemWidth = carousel.children[0].clientWidth;

        const translateX = -currentIndex * itemWidth;
        (carousel as HTMLElement).style.transform =
            `translateX(${translateX}px)`;
    };

    prevButton.addEventListener("click", () => {
        if (currentIndex > 0) {
            currentIndex -= 1;
            updateCarousel();
        }
    });

    nextButton.addEventListener("click", () => {
        if (currentIndex < carousel.children.length - 1) {
            currentIndex += 1;
            updateCarousel();
        }
    });

    updateCarousel();
</script>
